<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>pages/text/text.wxml</text>
<text>你好，我是行内元素，不换行</text> 
<text>\n</text>

<!-- 2.selectable：ture -->
<!--  默认情况下text中的文本长按是不能被选中的-->
<text selectable='{{true}}'>你好，可以被选中？</text>
<text selectable>你好，可以被选中？</text>


<!-- 3.space:决定文本空格的大小 -->
<!-- ensp半个中文字符大小 -->
<!-- emsp整个中文字符大小 -->
<text>hello world\n</text>
<text space='nbsp'>hello world\n</text>
<text space='ensp'>hello world\n</text>
<text space='emsp'>hello world\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text>5 &gt; 3</text>
<text decode>5 &gt; 3</text>