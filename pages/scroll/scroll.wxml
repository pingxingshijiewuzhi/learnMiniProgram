<!--pages/scroll/scroll.wxml-->
<!-- 1.水平滚动 -->
<scroll-view  class='container1' scroll-x>
<view wx:for='{{10}}' class='item1'>
{{item}}
</view>
</scroll-view>

<!-- 2.垂直滚动 -->
<scroll-view  class='container2' scroll-y>
<view wx:for='{{10}}' class='item2'>
{{item}}
</view>
</scroll-view>

<!-- 3.其他事件的补充 -->
 <!-- 滚动时触发 bindscroll-->
 <!-- 滚动到顶部/左边时触发 bindscrolltoupper -->
<scroll-view  class='container2'
 scroll-y
 bindscroll='handleScroll'>
<view wx:for='{{10}}' class='item2'>
{{item}}
</view>
</scroll-view>